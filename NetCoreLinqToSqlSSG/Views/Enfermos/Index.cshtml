@model List<Enfermo>

<h1 class="text-center">Enfermos LINQ To SQL</h1>

<a asp-controller="Enfermos" asp-action="BuscadorEnfermos" class="btn btn-primary">
    Buscador
</a>

<table class="table -table-info">
    <thead>
        <tr>
            <th>Inscripcion</th>
            <th>Apellido</th>
            <th>Direccion</th>
            <th>Fecha Nacimiento</th>
            <th>Sexo</th>
            <th>NSS</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Enfermo enfermo in Model)
        {
            <tr>
                <td>@enfermo.Inscripcion</td>
                <td>@enfermo.Apellido</td>
                <td>@enfermo.Direccion</td>
                <td>@enfermo.FechaNacimiento</td>
                <td>@enfermo.Sexo</td>
                <td>@enfermo.Nss</td>
                <td><a class="btn btn-danger" asp-controller="Enfermos" asp-action="Delete" asp-route-inscripcion="@enfermo.Inscripcion">Eliminar</a></td>
            </tr>
        }
    </tbody>
</table>

